<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<s:VGroup>
		<s:HGroup>
			<s:Label text="{'['+data.time.getHours().toString()+':'+ data.time.getMinutes().toString() +':'+ data.time.getSeconds().toString()+'] '}" color="#000000"  fontSize="14"/>			
			<s:Label text="{data.forwarder + ' says: '}" color="#854300" fontSize="14" fontWeight="bold"/>
		</s:HGroup>
		<s:Label text="{data.message + '\n'}" fontSize="14"/>
	</s:VGroup>
	
</s:ItemRenderer>
